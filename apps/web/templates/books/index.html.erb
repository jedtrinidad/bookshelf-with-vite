<h1 class="font-bold text-2xl">Books</h1>

<% if books.any? %>
  <div class="pt-3">
    <% books.each do |book| %>
      <div class="bg-gray-100 mt-3 p-3 max-w-md rounded">
        <h2 class="font-bold text-xl"><%= book.title %></h2>
        <p class="font-extralight"><%= book.author %></p>
      </div>
    <% end %>
      <div class="bg-gray-100 mt-3 p-3 max-w-md rounded">
        <%= add_book_form %>
      </div>
  </div>
<% else %>
  <p>There are no books yet.</p>
  <div class="bg-gray-100 mt-3 p-3 max-w-md rounded">
    <%= add_book_form %>
  </div>
<% end %>